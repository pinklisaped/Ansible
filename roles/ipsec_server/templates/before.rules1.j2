*nat
-A POSTROUTING -s {{ ipsec_server_rightsourceip }} -o {{ ansible_default_ipv4['interface'] }} -m policy --pol ipsec --dir out -j ACCEPT
-A POSTROUTING -s {{ ipsec_server_rightsourceip }} -o {{ ansible_default_ipv4['interface'] }} -j MASQUERADE
COMMIT

*mangle
-A FORWARD --match policy --pol ipsec --dir in -s {{ ipsec_server_rightsourceip }} -o {{ ansible_default_ipv4['interface'] }} -p tcp -m tcp --tcp-flags SYN,RST SYN -m tcpmss --mss 1361:1536 -j TCPMSS --set-mss 1360
COMMIT